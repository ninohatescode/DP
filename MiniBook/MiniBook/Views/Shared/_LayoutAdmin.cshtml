<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <link href="~\Content\bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>

    </style>
</head>
<body>
    <div>
        <div class="bs_header " style="width:100%" >
            <nav class="navbar navbar-expand-lg bg-body-tertiary row ">
                <a class="navbar-brand col-lg-3"  href="~/MBook/index">
                    <img src="~/Images/Logo.png" style="width:250px; padding:20px 0 0 50px" />
                </a>
                <ul class="nav nav-pills justify-content-end col-lg-8" style="margin-right:100px">
                    
                    @if (Session["Admin"] != null)
                    {
                        <li class="nav-link dropdown ">
                            <span class="nav-link dropdown-toggle link-dark " data-bs-toggle="dropdown" style="font-size:32px">@Session["AdminName"]</span>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="~/Admin/Logout">Đăng xuất</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </nav>
        </div>
        <div style="padding:51px 0 0 30px ; width:15%; float:left ; font-size:28px">
            <div class="container mt-3 text-white">
                <div class="list-group mb-3">
                    <div class="list-group-item list-group-item-secondary bg-transparent text-dark"><a class="nav-link" href="~/Category/Index">Danh mục sách</a></div>
                    <div class="list-group-item list-group-item-secondary bg-transparent text-dark"><a class="nav-link" href="~/Publisher/Index">Nhà xuất bản</a></div>
                    <div class="list-group-item list-group-item-secondary bg-transparent text-dark"><a class="nav-link" href="~/Author/Index">Tác giả</a></div>
                    <div class="list-group-item list-group-item-secondary bg-transparent text-dark"><a class="nav-link" href="~/Book/Index">Sách</a></div>
                    <div class="list-group-item list-group-item-secondary bg-transparent text-dark"><a class="nav-link" href="~/Customer/Index">Tài khoản</a></div>
                    <div class="list-group-item list-group-item-secondary bg-transparent text-dark"><a class="nav-link" href="~/DONHANGs/Index">Đơn hàng</a></div>
                    <div class="list-group-item list-group-item-secondary bg-transparent text-dark"><a class="nav-link" href="~/Users/Logout">Thống kê</a></div>
                </div>
            </div>
        </div>
        <div style=" width:80%;float:right; margin: 20px 0 0 0 " class="bs_content">
            @RenderBody()
        </div>
    </div>
   
</body>
</html>
